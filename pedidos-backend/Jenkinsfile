pipeline {
    agent any

    environment {
        GIT_COMMIT_SHORT = GIT_COMMIT.take(7)
    }

    triggers {
        githubPush()
    }
    stages {
        stage('Helm version') {
            steps {
                sh 'helm version'
            }
        }
        stage('Checkout') {
            steps {
                git url: 'https://github.com/alejandrazuleta1/k8s', branch: 'main'
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('pedidos-backend') {
                    script {
                        sh 'docker build -t alezuleta/my-tech:${GIT_COMMIT_SHORT} .'
                    }
                }
            }
        }
        stage('Push to Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials',
                                             usernameVariable: 'USER',
                                             passwordVariable: 'PASS')]) {
                    sh 'docker login -u $USER -p $PASS'
                    sh 'docker push alezuleta/my-tech:${GIT_COMMIT_SHORT}'
                }
            }
        }
       
        stage('Update Helm Values') {
            steps {
                script {

                     withCredentials([usernamePassword(credentialsId: 'jenkins-cred', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
                    sh """
                       cd charts

                        rm -rf ../repo
                        
                        #   actualizar values.yaml con el commit
                        sed -i 's/tag: .*/tag: ${GIT_COMMIT_SHORT}/' pedido-app/values.yaml

                        #   bump versión en Chart.yaml
                        yq -i -y '.version |= (split(".") | [.[0], .[1], ((.[2] | tonumber) + 1 | tostring)] | join("."))' pedido-app/Chart.yaml

                        echo "Nueva versión del chart:"
                        yq '.version' pedido-app/Chart.yaml

                        #   empaquetar el chart hacia el directorio repo/
                        helm package pedido-app -d ../repo

                        #   generar/actualizar index.yaml en repo/
                        helm repo index ../repo --url https://alejandrazuleta1.github.io/pedidos-charts/ --merge ../repo/index.yaml || \
                        helm repo index ../repo --url https://alejandrazuleta1.github.io/pedidos-charts/

                        ls -R \$(pwd)
        				find .
        				pwd
                        ls -l
                        
                       cd ..
                        echo "charts/pedido-app-0.1.0.tgz" >> .gitignore
                        echo "charts/pedido-app/index.yaml" >> .gitignore
                        echo "pedidos-charts/" >> .gitignore
                        echo "repo/" >> .gitignore

                        git add .
                        git commit -m "Update charts ${GIT_COMMIT_SHORT}"
                        git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/alejandrazuleta1/k8s
                        git push origin main
                    """
                }
                }
            }
        }
        stage('Checkout repo charts') {
            steps {
                dir('pedidos-charts') {
                    withCredentials([usernamePassword(credentialsId: 'jenkins-cred', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
                        git url: 'https://github.com/alejandrazuleta1/pedidos-charts', branch: 'main'
                        script {
                            sh """
                                ls -l
                                cp ../repo/pedido-app-*.tgz charts/.
                                cp ../repo/index.yaml .
                                #cp /var/jenkins_home/workspace/unisabana/charts/pedido-app-0.1.0.tgz charts
                                #cp /var/jenkins_home/workspace/unisabana/charts/index.yaml  .
                                #git config --global user.email "you@example.com"
                                #git config --global user.name "Your Name"
                                git add .
                                git commit -m "Update demo-api image tag to ${GIT_COMMIT_SHORT}"
                                git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/alejandrazuleta1/pedidos-charts
                                git push origin main
                            """
                        }
                    }
                }
            }
        }
    }
}